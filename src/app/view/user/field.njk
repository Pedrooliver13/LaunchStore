<div class="item">
  <div>Nome Completo</div>

  <div>
    <input 
      class="input"
      type="text" 
      name="name"
      placeholder="Coloque seu nome completo" 
      value="{{ user.name }}"
      required
    >
  </div>
</div>

<div class="item">
  <div>E-mail</div>

  <div>
    <input 
      class="input"
      type="email"
      name="email"
      placeholder="Escreva seu e-mail" 
      value="{{ user.email }}"
      onblur="validate.apply(this, 'isEmail')"
    >
  </div>
</div>

<div class="item">
  <div>Senha</div>

  <div>
    <input 
      class="input"
      type="password" 
      name="password"
      placeholder="Escreva sua senha" 
    >
  </div>
</div>

{% if not user.id %}
  {# isso no caso da edição, eu vou mandar ele repetir a senha  #}
  <div class="item">
    <div>Repetir senha</div>

    <div>
      <input 
        class="input"
        type="password" 
        name="passwordRepeat"
        placeholder="Repita sua senha" 
      >
    </div>
  </div>

{% endif %}

<div class="item">
  <div>CPF ou CNPJ</div>

  <div>
    <input 
      class="input"
      type="text"
      name="cpf_cnpj"
      placeholder="Digite seu documento"
      value="{{ user.cpf_cnpj }}"
      onkeydown="mask.apply(this , 'cpfCnpj')"
      onblur="validate.apply(this, 'isCpfCnpj')"
    >
  </div>
</div>

<div class="item">
  <div>Cep</div>

  <div>
    <input 
    class="input"
    type="text"
    name="cep"
    placeholder="99999-999"
    value="{{ user.cep }}"
    onkeydown="mask.apply(this, 'cep')"
    onblur="validate.apply(this, 'isCep')"
    >
  </div>
</div>

<div class="item">
  <div>Endereço completo</div>

  <div>
    <input 
      class="input"
      type="text"
      name="address"
      placeholder="Escreva seu endereço"
      value="{{ user.address }}"
    >
  </div>
</div>