{% extends "layout.njk" %}

{% block content %}
  <section class="container ">

    <form class="login" action="/user/password-reset" method="POST">
      <div class="header">
        <h3>Entrar</h3>
      </div>

      <div class="fields">
        {% include "./field.njk" %}

        <div class="item">
          <div>Repetir Senha</div>

          <div>
            <input 
              class="input"
              type="password" 
              name="passwordRepeat" 
              placeholder="Repita sua senha" 
              value="{{ user.passwordRepeat }}" 
            />
          </div>
        </div>
      </div>

      <button class="button button__update" type="submit">
        Recuperar senha
      </button>

    </form>
  </section>

{% endblock content %}