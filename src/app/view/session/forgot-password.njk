{% extends "layout.njk" %}

{% block content %}
  <section class="container ">

    <form class="login" action="/user/forgot-password" method="POST">
      <div class="header">
        <h3>Esqueceu a senha?</h3>
      </div>

      <div class="fields">
        <div class="item">
          <div>E-mail</div>

          <div>
            <input 
              class="input" 
              type="email" 
              name="email" 
              placeholder="Escreva seu e-mail" 
              value="{{ user.email }}" 
              onblur="validate.apply(this, 'isEmail')"
            >
          </div>
        </div>
      </div>

      <button class="button button__update" type="submit">
        Recuperar senha
      </button>

      <div class="login__footer">
        <ul>
          <li>
            <a href="/user/register">Registre-se</a>
          </li>
        </ul>
      </div>

    </form>
  </section>

{% endblock content %}