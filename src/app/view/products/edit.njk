{% extends "layout.njk" %}

{% block content %}
    <section class="container">
        {# 
        TODOS OS FORM QUE TIVER QUE SALVAR AS IMAGES  
        TEM DE TER OS  'ENCTYPE'  
        enctype="multipart/form-data"
        #}
        <form action="/products?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="header">
                <h3>Editar Produto</h3>
            </div>
            <div class="fields">
                <input type="hidden" name="id" value="{{ product.id }}">
                {% include "./field.njk" %}
            </div>
            <button class="button" type="submit">
                Salvar
            </button>
            <button form="formDelete" class="button" type="submit" onclick="buttons.apply('submit', this, 'wantDelete')">
                deletar
            </button>
        </form>
        <form id="formDelete" method="POST" action="/product/create?_method=DELETE" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{ product.id }}">
        </form>
    </section>

{% endblock content %}