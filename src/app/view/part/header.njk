            </a>

            {% if session.userId %}
              <ul class="submenu">
                <li>
                  <a href="#">
                    Minha conta
                  </a>
                </li>

                <li>
                  <a href="#">
                    Meus Pedidos
                  </a>
                </li>

                <li>
                  <a href="#">
                    Minhas Vendas
                  </a>
                </li>

                <li>
                  <form action="/user/logout" method="POST">
                    <button type="submit">
